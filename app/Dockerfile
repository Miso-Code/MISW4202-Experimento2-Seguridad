FROM python:3.9-slim-buster

# Crea y establece el directorio de trabajo
WORKDIR /app

# Copia el archivo de requisitos a la imagen y, a continuaci贸n, instala las dependencias
COPY requirements.txt requirements.txt
RUN pip3 install --no-cache-dir -r requirements.txt

# Copia el c贸digo de la aplicaci贸n en la imagen
COPY . .

# Establece la variable de entorno FLASK_APP y FLASK_ENV
ENV FLASK_APP=app.py
ENV FLASK_ENV=production

# Expone el puerto 5000 para que pueda ser accesible desde fuera del contenedor
EXPOSE 5000

# Arranca la aplicaci贸n
CMD ["flask", "run", "--host=0.0.0.0"]
